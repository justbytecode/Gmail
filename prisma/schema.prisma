// Prisma Schema for Gmail Clone

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Auth.js required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  sentEmails    Email[]             @relation("SentEmails")
  receivedEmails EmailRecipient[]
  labels        UserLabel[]
  notifications Notification[]
  readReceipts  ReadReceipt[]

  @@index([email])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Email System Models
model Email {
  id          String   @id @default(cuid())
  subject     String
  body        String   @db.Text
  bodyHtml    String?  @db.Text
  senderId    String
  threadId    String?
  isDraft     Boolean  @default(false)
  isStarred   Boolean  @default(false)
  isTrashed   Boolean  @default(false)
  isSpam      Boolean  @default(false)
  isArchived  Boolean  @default(false)
  scheduledAt DateTime?
  sentAt      DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  sender       User               @relation("SentEmails", fields: [senderId], references: [id], onDelete: Cascade)
  thread       EmailThread?       @relation(fields: [threadId], references: [id], onDelete: SetNull)
  recipients   EmailRecipient[]
  attachments  Attachment[]
  labels       EmailLabel[]
  readReceipts ReadReceipt[]

  @@index([senderId])
  @@index([threadId])
  @@index([sentAt])
  @@index([isDraft])
  @@index([isTrashed])
  @@index([isSpam])
}

model EmailThread {
  id           String   @id @default(cuid())
  subject      String
  lastMessageAt DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  emails Email[]

  @@index([lastMessageAt])
}

enum RecipientType {
  TO
  CC
  BCC
}

model EmailRecipient {
  id        String        @id @default(cuid())
  emailId   String
  userId    String
  type      RecipientType @default(TO)
  isRead    Boolean       @default(false)
  readAt    DateTime?
  createdAt DateTime      @default(now())

  email Email @relation(fields: [emailId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([emailId, userId])
  @@index([userId])
  @@index([emailId])
  @@index([isRead])
}

model Attachment {
  id        String   @id @default(cuid())
  emailId   String
  filename  String
  mimeType  String
  size      Int
  url       String
  createdAt DateTime @default(now())

  email Email @relation(fields: [emailId], references: [id], onDelete: Cascade)

  @@index([emailId])
}

model Label {
  id        String   @id @default(cuid())
  name      String
  color     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userLabels UserLabel[]
  emails     EmailLabel[]

  @@unique([name])
}

model UserLabel {
  id      String @id @default(cuid())
  userId  String
  labelId String

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  label Label @relation(fields: [labelId], references: [id], onDelete: Cascade)

  @@unique([userId, labelId])
  @@index([userId])
}

model EmailLabel {
  id      String @id @default(cuid())
  emailId String
  labelId String

  email Email @relation(fields: [emailId], references: [id], onDelete: Cascade)
  label Label @relation(fields: [labelId], references: [id], onDelete: Cascade)

  @@unique([emailId, labelId])
  @@index([emailId])
  @@index([labelId])
}

model ReadReceipt {
  id        String   @id @default(cuid())
  emailId   String
  userId    String
  readAt    DateTime @default(now())
  ipAddress String?
  userAgent String?

  email Email @relation(fields: [emailId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([emailId, userId])
  @@index([emailId])
  @@index([userId])
}

enum NotificationType {
  NEW_EMAIL
  READ_RECEIPT
  MENTION
  REPLY
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  message   String
  emailId   String?
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isRead])
  @@index([createdAt])
}